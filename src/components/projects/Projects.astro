---
import { Image } from "astro:assets";
import ProjectCard from "./ProjectCard.jsx";
import "/src/styles/components/projects.css";

const projects = [
  {
    title: "🕑 Time-tracker",
    description: "A simple website to track your tasks.",
    tags: ["React", "Vite", "Tailwind", "MongoDB"],
    image: "/time-tracker.png",
    link: "https://github.com/Bonfino/time-tracker",
  },
  {
    title: "📝 Payout Reader",
    description:
      "A Chrome extension that lets you view test case payouts and fetch related information.",
    tags: ["HTML", "Javascript", "CSS"],
    image: "https://picsum.photos/310/160",
    link: "",
  },
  {
    title: "👛 Portfolio",
    description:
      "A portfolio showcasing my projects, skills, and experience in software development.",
    tags: ["Javascript", "Astro", "React", "Three.js"],
    image: "/portfolio.png",
    link: "https://github.com/Bonfino/Portfolio-2",
  },
];
---

<div class="projects-container" id="projects">
  <h1>My <span>Projects</span></h1>

  <div class="project-cards-layout">
    <div class="project-row">
      {
        projects.map((project) => (
          <div class="project-minicard">
            <a href={project.link} target="_blank">
              <Image
                src={project.image}
                width={310}
                height={160}
                alt={project.title}
                format="webp"
                draggable="false"
                class="project-image"
              />
            </a>
            <ProjectCard
              title={project.title}
              description={project.description}
              tags={project.tags}
            />
          </div>
        ))
      }
    </div>
  </div>
</div>
